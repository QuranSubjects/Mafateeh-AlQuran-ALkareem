<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.quransubjectsapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/quran_subject_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quran_subject_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="DATABASE"
            android:value="sugar_example.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.lenovo.quransubjectsapp" />

        <activity
            android:name="com.example.lenovo.quransubjectsapp.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lenovo.quransubjectsapp.VersesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name="com.example.lenovo.quransubjectsapp.TafaseerActivity" />
        <activity
            android:name="com.example.lenovo.quransubjectsapp.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleDialog"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.example.lenovo.quransubjectsapp.HelpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.example.lenovo.quransubjectsapp.ChartActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <provider
            android:name="com.amitshekhar.DebugDBInitProvider"
            android:authorities="com.example.lenovo.quransubjectsapp.DebugDBInitProvider"
            android:enabled="true"
            android:exported="false" />
        <provider
            android:name="android.arch.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.lenovo.quransubjectsapp.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.lenovo.quransubjectsapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>