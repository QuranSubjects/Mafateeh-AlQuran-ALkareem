<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <ImageView
        android:id="@+id/action_help"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/options" />


    <ImageView
        android:id="@+id/action_contact_us"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/mail"
        android:layout_marginEnd="7dp"
        android:layout_toRightOf="@id/action_help"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/action_quran"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/quran_logo"
        android:layout_marginEnd="7dp"
        android:layout_toRightOf="@id/action_contact_us"
        android:layout_gravity="center_vertical"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_title"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_toLeftOf="@id/toolbar_layout"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/toolbar_layout"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/action_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mafatihcircle"
            android:layout_gravity="center_vertical"

            android:layout_alignParentLeft="true"
             />

    </LinearLayout>
</RelativeLayout>